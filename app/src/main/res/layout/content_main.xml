<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THE TOUR GUIDE"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"

        />

    <TextView
        android:id="@+id/photo_studio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="20dp"
        android:textSize="40sp"
        android:text="Photo Studio"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:background="#EEFF41"
        />

    <TextView
        android:id="@+id/art_gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="20dp"
        android:textSize="40sp"
        android:text="Art Gallery"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:background="#448AFF"
        />

    <TextView
        android:id="@+id/movie_theater"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="20dp"
        android:textSize="40sp"
        android:text="Movie Theater"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:background="#00E676"
        />

    <TextView
        android:id="@+id/garage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="20dp"
        android:textSize="40sp"
        android:text="Garage"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:background="#00E5FF"
        />

</LinearLayout>
</ScrollView>